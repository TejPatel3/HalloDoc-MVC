@using DataModels.ViewModel
@model EmployeeViewModel
<div class="modal fade" id="AddEmployee" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header mainColor">
                <h5 class="modal-title text-white" id="exampleModalLabel">Employee Form</h5>
            </div>
            <form asp-controller="Home" asp-action="AddEmployee" method="post" id="addemployeeform">
                <div class="modal-body row">
                    <div class="form-floating mb-3 col-6">
                        <input type="text" asp-for="FirstName"
                               class="form-control"
                               placeholder="Username"
                               aria-label="Username" required />
                        <span class="text-danger small" asp-validation-for="FirstName"></span>
                        <label class="d-flex justify-content-around ms-2">First Name</label>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input type="text" asp-for="LastName"
                               class="form-control"
                               placeholder="Username"
                               aria-label="Username" required />
                        <span class="text-danger small" asp-validation-for="LastName"></span>
                        <label class="d-flex justify-content-around ms-2">Last Name</label>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input type="email" asp-for="Email"
                               class="form-control"
                               placeholder="Username"
                               aria-label="Username" required />
                        <span class="text-danger small" asp-validation-for="Email"></span>
                        <label class="d-flex justify-content-around ms-2">Email</label>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input type="text" asp-for="Age"
                               class="form-control"
                               placeholder="Username"
                               aria-label="Username" required />
                        <span class="text-danger small" asp-validation-for="Age"></span>
                        <label class="d-flex justify-content-around ms-2">Age</label>
                    </div>

                    <div class="form-floating mb-3 col-6">
                        <div style="font-weight:600">Gender:</div>
                        <div class="d-flex flex-row">
                            <div class="form-check me-1">
                                <input asp-for="Gender" value="Male" class="form-check-input" type="radio" id="male">
                                <label class="form-check-label" for="male">
                                    Male
                                </label>
                            </div>
                            <div class="form-check me-1">
                                <input asp-for="Gender" value="Female" class="form-check-input" type="radio" id="female">
                                <label class="form-check-label" for="female">
                                    Female
                                </label>
                            </div>
                            <div class="form-check me-1">
                                <input asp-for="Gender" value="other" class="form-check-input" type="radio" id="other">
                                <label class="form-check-label" for="other">
                                    Other
                                </label>
                            </div>
                        </div>
                        <span class="text-danger small" asp-validation-for="Gender"></span>
                    </div>
                    <div class="mb-3 col-6 d-flex flex-column">
                        <div class="form-floating btn-group">
                            <select asp-for="DepartmentId" class="form-select form-select-lg  fs-6" aria-label=".form-select-lg example">
                                <option class="fs-6" value="" selected hidden">Department</option>
                                @foreach (var item in Model.DepartmentList)
                                {
                                    <option class="fs-6 regionselect" value="@item.Id">@item.Name</option>
                                }
                            </select>
                            <label for="floatingTextarea" class="text-secondary ms-2">Department</label>
                        </div>
                        <div>
                            <span class="text-danger small" asp-validation-for="DepartmentId"></span>
                        </div>
                    </div>
                    <div class=" mb-3 col-6 d-flex flex-column">
                        <div class="btn-group form-floating">
                            <select asp-for="Education" class="form-select form-select-lg  fs-6" aria-label=".form-select-lg example">
                                <option class="fs-6" value="" hidden">Education</option>
                                <option class="fs-6" value="Matric">Matric</option>
                                <option class="fs-6" value="Graduate">Graduate</option>
                                <option class="fs-6" value="PostGraduate">Post Graduate</option>
                                <option class="fs-6" value="Intermediate">Intermediate</option>
                                <option class="fs-6" value="Diploma">Diploma</option>
                            </select>
                            <label for="floatingTextarea" class="text-secondary ms-2">Education</label>
                        </div>
                        <div>
                            <span class="text-danger small" asp-validation-for="Education"></span>
                        </div>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input type="text" asp-for="Company"
                               class="form-control"
                               placeholder="Username"
                               aria-label="Username" required />
                        <span class="text-danger small" asp-validation-for="Company"></span>
                        <label class="d-flex justify-content-around ms-2">Company Name</label>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input type="text" asp-for="Experience"
                               class="form-control"
                               placeholder="Username"
                               aria-label="Username" required />
                        <span class="text-danger small" asp-validation-for="Experience"></span>
                        <label class="d-flex justify-content-around ms-2">Experience</label>
                        <span class="small text-secondary ms-2">In Years</span>
                    </div>
                    <div class="form-floating mb-3 col-6">
                        <input type="text" asp-for="Package"
                               class="form-control"
                               placeholder="Username"
                               aria-label="Username" required />
                        <span class="text-danger small" asp-validation-for="Package"></span>
                        <label class="d-flex justify-content-around ms-2">Package</label>
                        <span class="small text-secondary ms-2">In Rupees</span>
                    </div>
                </div>
                <div class="modal-footer d-flex justify-content-around">
                    <button type="button" class="px-5 btn border-2 border" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="px-5 btn btnpurple" id="addEmployeeModelSavebtn">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
