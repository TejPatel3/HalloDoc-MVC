@using Services.ViewModels
@model UserAllDataViewModel
@{
    Layout = null;
}
<div class="container bg-light">
    <div class="d-flex justify-content-between align-items-center w-100 my-3">
        <h4 class="fw-bold">MY Profile</h4>
        <a asp-controller="Admin" asp-action="AdminDashboard"
           class="btn m-0 btn-outline-info  px-2 ">
            <i class="fa-solid fa-chevron-left"></i>
            Back
        </a>
    </div>
    <div class="container-fluid my-3 bg-white shadow">
        <div class="row px-2">
            <h5 class="my-3">Account Information</h5>
            <div class="col-12 col-sm-6 form-floating mb-3 ">
                <input type="text" asp-for="UserName"
                       class="form-control"
                       placeholder="Username"
                       aria-label="Username" />
                <label class="d-flex justify-content-between ms-2">User Name</label>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">

                <input type="text" asp-for="password"
                       class="form-control" id="password-adminprofile"
                       placeholder="Username"
                       aria-label="Username" />
                <label class="d-flex justify-content-between ms-2">Password</label>
            </div>
            <div class="col-12 col-sm-6 form-floating">

                <select class="form-select form-select-lg  fs-6 shadow-none" aria-label=".form-select-lg example" asp-for="status">

                    <option class="fs-6" value="1" selected>Active</option>
                    <option class="fs-6" value="0" selected>Inactive</option>

                </select>
                <label for="floatingTextarea" class="text-secondary ms-3">Status</label>

            </div>
            <div class="col-12 col-sm-6 form-floating">
                <select class="form-select form-select-lg  fs-6 shadow-none" aria-label=".form-select-lg example">
                    @foreach (var item in Model.role)
                    {
                        <option class="fs-6">@item.Name</option>
                    }
                </select>
                <label for="floatingTextarea" class="text-secondary ms-3">Role</label>

            </div>
            <div class="mt-3 d-flex justify-content-end col-12">
                <button class="btn btn-outline-info me-2" id="resetpassword-adminprofile">Reset Password</button>
            </div>

            @* ********************************************************************************************************************************************* *@


            <h5 class="mb-3">Administrator Information</h5>
            <div class="col-12 col-sm-6 form-floating mb-3 ">
                <input type="text" asp-for="firstname"
                       class="form-control adisabled"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ms-2">First Name</label>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">
                <input type="text" asp-for="lastname"
                       class="form-control adisabled"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ms-2">Last Name</label>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3 ">
                <input type="text" asp-for="email"
                       class="form-control adisabled" id="email-adminprofile"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ms-2">Email</label>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">
                <input type="text" asp-for="confirmationemail"
                       class="form-control adisabled"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ms-2">Confirm Email</label>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">
                <div class="form-control p-0">
                    <input id="phone" asp-for="phonenumber"
                           type="tel" class="adisabled"
                           style="border: none; padding: 18px 2% 18px 50px; width:inherit" disabled />
                </div>
            </div>
            <div class="col-12 col-sm-6 pt-2">
                @foreach (var item in Model.regionlist)
                {
                    <div class="form-check form-check-inline ">
                        <input class="form-check-input adisabled" type="checkbox" id="inlineCheckbox1" value="option1" disabled>
                        <label class="form-check-label" for="inlineCheckbox1">@item.Name</label>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-end col-12">
                <button class="btn btn-info text-white px-4" id="editbtn-administrator-adminprofile">Edit</button>
                <button class="btn btn-info text-white px-4" id="savebtn-administrator-adminprofile" hidden>Save</button>
            </div>

            @* ********************************************************************************************************************************************* *@

            <h5 class="mb-3">Mailing & Billing Information</h5>
            <div class="col-12 col-sm-6 form-floating mb-3 ">
                <input type="text" asp-for="address1"
                       class="form-control mdisabled"
                       placeholder="Username"
                       aria-label="Username"  disabled/>
                <label class="d-flex justify-content-between ms-2">Address 1</label>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">

                <input type="text" asp-for="address2"
                       class="form-control mdisabled"
                       placeholder="Username"
                       aria-label="Username"  disabled/>
                <label class="d-flex justify-content-between ms-2">Address 2</label>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">

                <input type="text" asp-for="city"
                       class="form-control mdisabled"
                       placeholder="Username"
                       aria-label="Username"  disabled/>
                <label class="d-flex justify-content-between ms-2">City</label>
            </div>
            <div class="col-12 col-sm-6 form-floating">

                <select class="form-select form-select-lg  fs-6 shadow-none mdisabled" aria-label=".form-select-lg example" disabled>
                    <option class="fs-6" value="" selected>Gujarat</option>
                    <option class="fs-6" value="" selected>Maharastra</option>
                    <option class="fs-6" value="" selected>Goa</option>
                    @*    @foreach (var item in Model.role)
                    {
                    <option class="fs-6" >@item.Name</option>
                    } *@
                </select>
                <label for="floatingTextarea" class="text-secondary ms-3">State</label>

            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">

                <input type="text" asp-for="zip"
                       class="form-control mdisabled"
                       placeholder="Username"
                       aria-label="Username"  disabled/>
                <label class="d-flex justify-content-between ms-2">Zip</label>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">
                <div class="form-control p-0">
                    <input id="home" asp-for="alterphonenumber"
                           type="tel" class="mdisabled"
                           name="PhoneNumber"
                           style="border: none; padding: 18px 2% 15px 50px" disabled/>

                </div>
            </div>

            <div class="d-flex justify-content-end col-12 pb-3">
                <button class="btn btn-info text-white px-4 me-2" id="editbtn-mailing-adminprofile">Edit</button>
                <button class="btn btn-info text-white px-4 me-2" id="savebtn-mailing-adminprofile" hidden>Save</button>
            </div>

        </div>
    </div>


</div>

