@* //Desktop view *@

<div class="d-none d-sm-block p-0 m-0">
    <table class="table align-middle small example" id="SixTableContent">
        <thead class="thead-light bg-light">
            <tr>
                <th class="d-none">request Type</th>
                <th class="d-none">Request Id</th>
                <th scope="col">Name</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Requestor</th>
                <th scope="col">Requested Date</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Notes</th>
                <th scope="col">Chat With</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="datatable" class="bg-white">
            @foreach (var item in Model)
            {
                var color = "green-dot";
                switch (item.RequestType)
                {
                    case 1:
                        {
                            color = "green-dot";
                            break;
                        }
                    case 2:
                        {
                            color = "orange-dot";
                            break;
                        }
                    case 3:
                        {
                            color = "pink-dot";
                            break;
                        }
                    case 4:
                        {
                            color = "cyan-dot";
                            break;
                        }
                    default:
                        {
                            color = "purple-dot";
                            break;
                        }
                }

                <tr class="@color">
                    <td class="d-none">@item.RequestType</td>
                    <td class="d-none">@item.regionid</td>
                    <td scope="row">
                        <a href="mailto:@item.ProviderEmail" class="d-flex justify-content-between text-decoration-none text-white">
                            @item.PatientName <div class="btn btn-outline-light btn-sm"><i class="fa-regular fa-envelope fa-sm"></i></div>
                        </a>
                    </td>
                    <td>@item.PatientDOB.ToString("dd MMM,yyyy ")</td>
                    <td>@item.RequestTypeName(item.RequestType)</td>
                    <td>@item.RequestedDate.ToString("dd MMM,yyyy")</td>
                    <td>
                        <div class="btn btn-outline-light w-75 d-flex small px-0 py-1">
                            <i class="bi bi-telephone pe-3 ps-1"></i>
                            @item.PatientPhone
                        </div>
                        <small class="p-0 m-0">(Patient)</small>
                        @if (item.RequestType == 2 && item.RequestorPhone != null)
                        {
                            <div class="btn btn-outline-light w-75 d-flex px-0 py-1">
                                <i class="bi bi-telephone pe-3 ps-1"></i>
                                @item.RequestorPhone
                            </div>
                            <small>(Family\Friend)</small>
                        }
                        @if (item.RequestType == 3 && item.RequestorPhone != null)
                        {
                            <div class="btn btn-outline-light w-75 d-flex px-0 py-1">
                                <i class="bi bi-telephone pe-3 ps-1"></i>
                                @item.RequestorPhone
                            </div>
                            <small>(Concierge)</small>
                        }
                        @if (item.RequestType == 4 && item.RequestorPhone != null)
                        {
                            <div class="btn btn-outline-light w-75 d-flex px-0 py-1">
                                <i class="bi bi-telephone pe-3 ps-1"></i>
                                @item.RequestorPhone
                            </div>
                            <small>(Business)</small>
                        }
                    </td>
                    <td>@item.Address</td>
                    <td>@item.Notes</td>
                    <td>
                        <div class="d-flex">
                            <button class="btn btn-outline-light p-1 me-2 shadow-none"
                                    type="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                <i class="bi bi-person-fill"></i>
                                <span>
                                    Patient
                                </span>
                            </button>
                        </div>
                    </td>
                    <td>
                        <div class="dropstart ms-2">
                            <button class="btn btn-outline-light" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Actions
                            </button>
                            <input type="hidden" asp-for="@item.requestid" value="@item.requestid" />
                            <ul class="dropdown-menu">
                                <li>
                                    <button type="button" id="@item.requestid" value="@item.PatientName" class="dropdown-item text-secondary cancelbtn" data-toggle="modal" data-target="#AssignModal">
                                        <i class="fa-regular fa-rectangle-list me-2"></i>
                                        Assign case
                                    </button>
                                </li>
                                <li>
                                    <button type="button" id="@item.requestid" value="@item.PatientName" class="dropdown-item text-secondary cancelbtn" data-toggle="modal" data-target="#exampleModal">
                                        <i class="fa-regular fa-circle-xmark me-2"></i>
                                        Cancel case
                                    </button>
                                </li>
                                <li><button class="dropdown-item text-secondary viewCase" value="@item.requestid"><i class="bi bi-view-list me-2"></i>View case</button></li>
                                <li><button class="dropdown-item text-secondary viewNotes" value="@item.requestid"><i class="fa-solid fa-book-journal-whills me-2"></i>View Notes </button> </li>
                                <li><button type="button" id="@item.requestid" value="@item.PatientName" class="dropdown-item text-secondary cancelbtn" data-toggle="modal" data-target="#BlockModal"><i class="fa-solid fa-ban me-2"></i>Block Patients</button></li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

