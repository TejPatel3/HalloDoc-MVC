@model Services.ViewModels.SendOrderModal
<Partial name="Toast" />
@{
    Layout = null;
}
<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <div class="container mt-5">
            <div class="d-flex justify-content-between align-items-center mt-2">
                <div class="d-flex">
                    <h4>Send Order</h4>
                </div>
                <div>
                    <a onclick="location.reload()"
                       class="btn m-0 btn-outline-info  px-2 ">
                        <i class="fa-solid fa-chevron-left"></i>
                        Back
                    </a>
                </div>
            </div>
            <div class="border border-0 shadow rounded-3 px-4 py-2 mt-2 bg-white">
                <form method="post">
                    <div class="mt-3 d-flex row">
                        <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <select name="profession" class="form-select form-select-lg fs-6 py-3 shadow-none  border-secondary firstdropdown">
                                    <option selected hidden>Select Profession</option>
                                    @foreach (var item in Model.Healthprofessionaltypes)
                                    {
                                        <option itemid="@item.HealthProfessionalId">@item.ProfessionName</option>
                                    }
                                </select>
                                <span class="text-danger small" id="firstidvalidationspan"></span>
                            </div>
                        </div>

                        <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                            <div class="form-group">
                                <select name="business" class="form-select form-select-lg fs-6 py-3 shadow-none business secondDropdown ">
                                    <option hidden>Business</option>
                                </select>
                                <span class="text-danger small" id="vendoridvalidationspan"></span>
                            </div>
                        </div>

                        <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                            <div class="form-floating ">
                                <input type="text" asp-for="BusinessContact" class="form-control shadow-none disable" placeholder="Business Contact">
                                <label class="FloatingInput" for="Name">Business Contact</label>
                                <span class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                            <div class="form-floating ">
                                <input type="email" asp-for="Email" class="form-control shadow-none" placeholder="Email">
                                <label class="FloatingInput" for="Name">Email</label>
                                <span class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                            <div class="form-floating ">
                                <input type="text" asp-for="FaxNumber" class="form-control shadow-none disable" placeholder="Fax Number">
                                <label class="FloatingInput" for="Name">Fax Number</label>
                                <span class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="p-2 col-xl-12">
                            <div class="form-floating">
                                <div class="form-floating">
                                    <textarea class="form-control shadow-none prescription"
                                              placeholder="Prescription or Order Details"
                                              style="height: 100px"></textarea>
                                    <label for="floatingTextarea2">Prescription or Order Details</label>
                                    <span class="text-danger small" id="prescriptionValidationspan"></span>
                                </div>
                            </div>
                        </div>

                        <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                            <div class="form-floating">
                                <select name="refill" asp-for="refill" class="form-select shadow-none mt-3 border-secondary RefillNum" id="floatingSelect" aria-label="Floating label select example">
                                    <option class="refill" selected hidden>Number Of Refill</option>
                                    <option class="refill">1</option>
                                    <option class="refill">2</option>
                                    <option class="refill">3</option>
                                    <option class="refill">4</option>
                                    <option class="refill">5</option>
                                </select>
                                <label class="text-secondary" for="floatingSelect">Narrow Search by Region</label>
                            </div>
                        </div>

                        <div class="justify-content-end d-flex mt-4">
                            <div class="mx-1">
                                <button type="button" class="btn btn-info shadow-none text-white py-2 ordersubmit">
                                    Submit
                                </button>
                            </div>
                            <div class="mx-1">
                                <button asp-action="Admindashboard" asp-controller="Admin" type="button" class="btn btn-outline-info shadow-none py-2">
                                    Cancel
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<script>
    $(document).ready(function () {
        $('.firstdropdown').change(function () {
            $('#firstidvalidationspan').html("");
            var healthprofessionId = $(this).find(":selected").attr('itemid');
            console.log(healthprofessionId);
            $.ajax({
                url: '/Admin/GetBusiness',
                type: 'GET',
                data: { healthprofessionId: healthprofessionId },
                success: function (data) {
                    var secondDropdown = $('.business');
                    secondDropdown.empty();
                    secondDropdown.append($('<option>', {
                        hidden: "hidden",
                        value: "invalid",
                        text: "Business"
                    }))
                    $.each(data, function (index, item) {
                        secondDropdown.append($('<option>', {
                            value: item.vendorId,
                            text: item.vendorName
                        }));
                    });
                }
            });
        });

        $('.secondDropdown').on('click', function () {
            if ($('#vendoridvalidationspan').html() != "") {
                $('#firstidvalidationspan').html("Please Select Business");
            }
            else {
                $('#firstidvalidationspan').html("");
            }
        });
        $('.secondDropdown').on('change', function () {
            $.ajax({
                url: '/Admin/GetVendorDetail',
                data: { vendorid: $(this).val() },
                success: function (data) {
                    console.log(data)
                    $('#firstidvalidationspan').html("");
                    $('#vendoridvalidationspan').html("");
                    $('input[name="BusinessContact"]').val(data.businessContact);
                    $('input[name="Email"]').val(data.email);
                    $('input[name="FaxNumber"]').val(data.faxNumber);
                }
            });
        })

        $('.ordersubmit').on('click', function () {
            event.preventDefault()
            console.log("sgdgvsyvdyfsvfgsvgv")
            var requestid = @Model.requestid;
            var vendorid = $('.secondDropdown').val();
            var RefillNumber = $('.RefillNum').val();
            var prescription = $('.prescription').val();
            $('#prescriptionValidationspan').html("");
            $('#vendoridvalidationspan').html("");
            var allvalidation = true;
            if (vendorid == "Business") {
                $('#vendoridvalidationspan').html("Please Select Business");
                allvalidation = false;
            }
            if (prescription == "") {
                $('#prescriptionValidationspan').html("Please Enter Prescription");
                allvalidation = false;
            }
            if (allvalidation) {
                $.ajax({
                    url: '/Admin/Orders',
                    type: 'POST',
                    data: { requestid: requestid, vendorid: vendorid, prescription: prescription, refill: RefillNumber },
                    success: function (data) {
                        location.reload()
                    },
                    error: function (xhr, status, error) {
                        console.log(error);
                    }
                });
            }
        });
    });
</script>