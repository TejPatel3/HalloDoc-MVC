<div class="d-none d-sm-block ">


    <table class="table align-middle example">
        <thead class="thead-light bg-light">
            <tr>
                <td class="d-none"></td>
                <td class="d-none"></td>

                <th scope="col">Name</th>
                <th scope="col">Date Of Birth</th>
                <th scope="col">Requestor</th>
                <th scope="col">Physician Name</th>
                <th scope="col">Date Of Service</th>
                <th scope="col">Phone</th>
                <th scope="col">Address</th>
                <th scope="col">Notes</th>
                <th scope="col">Chat With</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody id="datatable" class="bg-white">



            @foreach (var item in Model)
            {



                var color = "green-dot";

                switch (item.RequestType)
                {
                    case 1:
                        {
                            color = "green-dot";
                            break;
                        }
                    case 2:
                        {
                            color = "orange-dot";
                            break;
                        }
                    case 3:
                        {
                            color = "pink-dot";
                            break;
                        }
                    case 4:
                        {
                            color = "cyan-dot";
                            break;
                        }
                    default:
                        {
                            color = "purple-dot";
                            break;
                        }
                }

                <tr class="@color">
                    <td class="d-none">@item.RequestType</td>
                    <td class="d-none">@item.regionid</td>

                    <td scope="row">
                        <div class="d-flex justify-content-between ">

                            @item.PatientName <div class="btn btn-outline-light btn-sm"><i class="fa-regular fa-envelope fa-sm"></i></div>
                        </div>
                    </td>
                    <td>@item.PatientDOB.ToString("dd MMM,yyyy ")</td>
                    <td>@item.RequestTypeName(item.RequestType)</td>
                    <td>@item.PhysicianName</td>
                    <td>@item.RequestedDate</td>
                    <td>
                        <button class="btn btn-outline-light w-100 d-flex ">
                            <i class="bi bi-telephone pe-3 ps-1"></i>
                            @item.PatientPhone
                        </button>
                        <small>(Patient)</small>

                        @if (item.RequestType == 2 && item.RequestorPhone != null)
                        {
                            <button class="btn btn-outline-light w-100 d-flex ">
                                <i class="bi bi-telephone pe-3 ps-1"></i>
                                @item.RequestorPhone
                            </button>
                            <small>(Family\Friend)</small>
                        }
                        @if (item.RequestType == 3 && item.RequestorPhone != null)
                        {
                            <button class="btn btn-outline-light w-100 d-flex ">
                                <i class="bi bi-telephone pe-3 ps-1"></i>
                                @item.RequestorPhone
                            </button>
                            <small>(Concierge)</small>
                        }
                        @if (item.RequestType == 4 && item.RequestorPhone != null)
                        {
                            <button class="btn btn-outline-light w-100 d-flex ">
                                <i class="bi bi-telephone pe-3 ps-1"></i>
                                @item.RequestorPhone
                            </button>
                            <small>(Business)</small>
                        }
                    </td>
                    <td>@item.Address</td>
                    <td>@item.Notes</td>
                    <td>
                        <div class="d-flex">
                            <button class="btn btn-outline-light p-1 me-2 shadow-none"
                                    type="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                <i class="bi bi-person-fill"></i>
                                <span>
                                    Patient
                                </span>
                            </button>

                            <button class="btn btn-outline-light p-1 shadow-none"
                                    type="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                <i class="bi bi-person-badge-fill"></i>
                                <span>
                                    Provider
                                </span>
                            </button>

                        </div>
                    </td>
                    <td>
                        <div class="dropstart ms-2">


                            <button class="btn btn-outline-light shadow-none" type="button" data-bs-toggle="dropdown" id="drop" aria-expanded="false">
                                Actions
                            </button>
                            <ul class="dropdown-menu">

                                <li>
                                    <button class="dropdown-item text-secondary viewCase" value="@item.requestid">
                                        <i class="bi bi-view-list me-2"></i>
                                        View case
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item text-secondary viewUpload" value="@item.requestid">
                                        <i class="bi bi-view-list me-2"></i>
                                        View Uploads
                                    </button>
                                </li>
                                <li>
                                    <button value="@item.requestid" class="dropdown-item text-secondary viewNotes">
                                        <i class="fa-solid fa-book-journal-whills me-2"></i>View Notes
                                    </button>
                                </li>
                                <li>
                                    <button type="button" id="@item.requestid" value="@item.PatientName" class="dropdown-item text-secondary cancelbtn" data-toggle="modal" data-target="#TransferModal">
                                        <i class="bi bi-view-list me-2"></i>
                                        Transfer
                                    </button>
                                </li>
                                <li>
                                    <button type="button" class="dropdown-item text-secondary cancelbtn" id="@item.requestid" data-toggle="modal" data-target="#ClearModal">
                                        <i class="bi bi-view-list me-2"></i>
                                        Clear Case
                                    </button>
                                </li>
                                <li>
                                    <button type="button" class="dropdown-item text-secondary cancelbtn SendAgreementModal" value="@item.RequestType" id="@item.requestid" data-toggle="modal" data-target="#AgreementModal">
                                        <i class="bi bi-view-list me-2"></i>
                                        Send Agreement
                                    </button>
                                </li>

                            </ul>


                        </div>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>

