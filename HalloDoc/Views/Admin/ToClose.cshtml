@using Services.ViewModels
@model List<AdminDashboardTableDataViewModel>
@{
    Layout = null;
}
@{
    var totalpages = Math.Ceiling(@ViewBag.TotalRowsOfDataContent / 5.00);
}

<div class="accordion d-block d-sm-none " id="accordionExample">

    @foreach (var item in Model)
    {
        <div class="accordion-item">
            @{

                var color = "green-dot";

                switch (item.RequestType)
                {
                    case 1:
                        {
                            color = "green-dot";
                            break;
                        }
                    case 2:
                        {
                            color = "orange-dot";
                            break;
                        }
                    case 3:
                        {
                            color = "pink-dot";
                            break;
                        }
                    case 4:
                        {
                            color = "cyan-dot";
                            break;
                        }
                    default:
                        {
                            color = "purple-dot";
                            break;
                        }
                }
            }

            <h2 class="accordion-header" id="heading_@item.requestid">
                <div class="accordion-button collapsed pb-4" type="button" data-bs-toggle="collapse" data-bs-target="#collapse_@item.requestid" aria-expanded="false" aria-controls="collapse_@item.requestid">


                    <div class="col d-flex flex-column">
                        <span class="d-none">@item.RequestType</span>
                        <span class="">@item.PatientName</span>
                        <span class=" mt-3 font-size-m-clamp">@item.Address</span>
                        <span class="mt-2 font-size-s-clamp"><i class="bi bi-clock text-info me-2 "></i>Wait Time: DEC5, 2023</span>
                    </div>
                    <div class="col d-flex flex-column text-end mt-2 p-0">
                        <div>
                            <div>
                                <span>@item.RequestTypeName(item.RequestType)</span>
                                <i class="bi bi-circle-fill  @color"></i>
                            </div>
                            <div class="btn text-info border-info float-end mt-3 rounded-pill btn-sm width-xs-clamp font-size-xs-clamp">
                                Map Location
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="m-0">
            </h2>

            <div id="collapse_@item.requestid" class="accordion-collapse collapse " aria-labelledby="heading_@item.requestid" data-bs-parent="#accordion">
                <div class="d-flex justify-content-end">
                    <button type="button" class="rounded-pill me-3 viewCaseBtn p-1 viewCase" value="@item.requestid" style="cursor : pointer">
                        View Case
                    </button>
                </div>

                <div class="accordion-body d-flex flex-column gap-1">
                    <div><i class="bi bi-calendar2-minus me-2 icn"></i>Date of birth: @item.PatientDOB</div>
                    <div><i class="bi bi-envelope me-2 icn"></i>Email: @item.PatientEmail</div>
                    <div><i class="bi bi-person me-2 icn"></i>Transfer Admin transferred to Dr.tatva on 13/12/2023 at 5:47:19 AM : test</div>

                    <div><i class="bi bi-calendar2-minus me-2 icn"></i>Date of service: -</div>
                    <div><i class="bi bi-person me-2 icn"></i>Physician: @item.RequestorName</div>
                    <div><i class="bi bi-circle me-2 icn"></i>Region: @item.RegionNameById(item.regionid)</div>


                </div>
                <div class="container-fluid">

                    <div class="row gy-2">


                        <div class="col-6 d-flex justify-content-center">

                            <button value="@item.requestid" id="@item.requestid" class="btn w-100 bg-danger text-white rounded-pill p-1 btn-sm text-secondary closecasebtn">

                                Close Case
                            </button>
                        </div>

                        <div class="col-6 d-flex justify-content-center">

                            <button value="@item.requestid" class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm text-secondary viewNotes">

                                View Notes
                            </button>
                        </div>
                        <div class="col-6 d-flex justify-content-center">

                            <button value="@item.requestid" class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm text-secondary">

                                Doctor Note
                            </button>
                        </div>

                        <div class="col-6 d-flex justify-content-center">

                            <button value="@item.requestid" class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm text-secondary viewUpload">

                                View Uploads
                            </button>
                        </div>

                        <div class="col-6 d-flex justify-content-center">

                            <button type="button" value="@item.requestid" class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm text-secondary encounter" id="@item.requestid" data-toggle="modal" data-target="#exampleModalEncounter">

                                Encounter
                            </button>
                        </div>



                        <div class="col-6 d-flex justify-content-center">

                            <button type="button" id="@item.requestid" value="@item.requestid" data-toggle="modal" data-target="#ClearModal" class="btn w-100 text-white bg-warning rounded-pill p-1 btn-sm text-secondary cancelbtn">
                                Clear Case
                            </button>
                        </div>

                        <div class="col-6 d-flex justify-content-center">
                            <a class="btn w-100 bg-success text-white rounded-pill p-1 btn-sm">Email</a>
                        </div>

                        <div class="d-flex justify-content-end mb-2">
                            <small class="mt-1">Chat with: &nbsp;</small>
                            <button class="btn btn-outline-info p-1 me-2 shadow-none"
                                    type="button" >
                                <i class="bi bi-person-fill"></i>
                                <small>
                                    Patient
                                </small>
                            </button>

                            <button class="btn btn-outline-info p-1 shadow-none"
                                    type="button">
                                <i class="bi bi-person-badge-fill"></i>
                                <small>
                                    Provider
                                </small>
                            </button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
