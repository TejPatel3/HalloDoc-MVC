                                Actions
                            </button>
                            <ul class="dropdown-menu">

                                <li>
                                    <button class="dropdown-item text-secondary viewCase" value="@item.requestid">
                                        <i class="bi bi-view-list me-2"></i>
                                        View case
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item text-secondary viewUpload" value="@item.requestid">
                                        <i class="bi bi-view-list me-2"></i>
                                        View Uploads
                                    </button>
                                </li>
                                <li>
                                    <button value="@item.requestid" class="dropdown-item text-secondary viewNotes">
                                        <i class="fa-solid fa-book-journal-whills me-2"></i>View Notes
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item text-secondary order" value="@item.requestid">
                                        <i class="bi bi-view-list me-2"></i>
                                        Orders
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item text-secondary closecasebtn" value="@item.requestid" id="@item.requestid">
                                        <i class="bi bi-x-circle"></i>
                                        Close Case
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item text-secondary" value="@item.requestid">
                                        <i class="bi bi-file-earmark-text"></i>
                                        Doctors Note
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item text-secondary cancelbtn" id="@item.requestid" data-toggle="modal" data-target="#ClearModal">
                                        <i class="bi bi-view-list me-2"></i>
                                        Clear Case
                                    </button>
                                </li>
                                <li>
                                    <button class="dropdown-item text-secondary" value="@item.requestid">
                                        <i class="bi bi-file-earmark-text"></i>
                                        Encounter
                                    </button>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
