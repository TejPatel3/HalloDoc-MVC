@using Services.ViewModels
@model ViewCaseViewModel
@* @model HalloDoc.DataModels.RequestClient *@
@{
    Layout = "_Admin";
}
<!-- form input -->

<div class="container pb-4 bg-light">
    <div class="d-flex justify-content-between align-items-center w-100 my-3">
        <h4>New Request<span class="green-dot ms-2  small   text-white px-3 py-2" style="border-radius:25px; font-size:15px ">Patient</span></h4>
        <a asp-controller="Admin" asp-action="AdminDashboard"
           class="btn m-0 btn-outline-info  px-2 ">
            <i class="fa-solid fa-chevron-left"></i>
            Back
        </a>
    </div>
    <form asp-controller="Admin" asp-action="Edit" method="post">
        <div class="row bg-white  px-4 py-2 rounded-3 shadow">
            <h5 class="py-2">Patient Information</h5>
            <small class="text-secondary small" style="font-size:12px">Confirmation Number</small>
            <h5 class="text-info">@Model.ConfirmationNumber</h5>
            <input type="text" asp-for="ConfirmationNumber" hidden />
            <div class="form-floating col-12 my-3  pb-2 ">
                <textarea class="form-control" asp-for="PatientNotes"
                          placeholder="Leave a comment here"
                          style="height: 100px" disabled></textarea>
                <label for="floatingTextarea" class="ms-2 text-secondary">Enter Brief details about symptoms(optional)</label>
                <span class="text-danger"></span>
            </div>
            <hr style="border:1px dashed gray; margin-bottom:25px;" />
            <div class="col-12 col-sm-6 form-floating mb-3 ">
                <input type="text" asp-for="FirstName"
                       class="form-control"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ms-2">First Name </label>
                @*                     <span asp-validation-for="FirstName" class="text-danger"></span>
                *@
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">

                <input type="text" asp-for="LastName"
                       class="form-control"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ms-2">Last name</label>
                @* <span asp-validation-for="LastName" class="text-danger"></span> *@
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">
                @{
                    string max = DateTime.Now.ToString("yyyy-MM-dd");
                }
                <input type="date" asp-for="DOB"
                       class="form-control pt-4 ms-1"
                       placeholder="Username"
                       aria-label="Username" max=@max disabled />
                <label class="d-flex justify-content-between ms-3 m-0">Birth Date</label>
                <span class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-6 d-flex mb-3">
                <div class="container-fluid p-0 m-0">

                    <div class="row">

                        <div class="col-sm-8 col-8 form-floating ">
                            <input id="phone" asp-for="PhoneNumber"
                                   type="tel" class="form-control"
                                   name="PhoneNumber"
                                   style=" padding: 16px 2% 16px 50px; " disabled />

                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                        </div>

                        <div class="col-sm-4 col-4 form-floating ">
                            <a class="btn btn-outline-info w-100 h-100 d-flex justify-content-center align-items-center" href="https://www.google.com/maps/">
                                <i class="bi bi-telephone fa-lg"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-12 col-sm-6 form-floating mb-3">
                <input type="email" asp-for="Email"
                       class="form-control" id="patientEmail"
                       placeholder="Username" onblur="checkEmailExists()" disabled />
                <label class="d-flex justify-content-between ms-2">Email </label>
                <span class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">

                <button type="button" class="btn btn-outline-info  h-100  rounded-2  px-4" id="editButton">
                    Edit
                </button>
                <button type="submit" class="btn btn-outline-info  h-100  rounded-2  px-4" id="savebtn" hidden>
                    Save
                </button>
            </div>



            <h5 class="mb-3 mt-4 fw-semibold">Location Information</h5>
            <div class="col-12 col-sm-6 form-floating mb-3">
                <input type="text" asp-for="Region"
                       class="form-control"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ms-2">Region </label>
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>

            <div class="col-12 col-sm-6 d-flex ">
                <div class="container-fluid p-0 m-0">

                    <div class="row">

                        <div class="col-10 form-floating ">
                            <input type="text" asp-for="Address"
                                   class="form-control"
                                   placeholder="Username"
                                   aria-label="Username" disabled />
                            <label class="d-flex justify-content-between ms-2">Address </label>
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <div class="col-2 form-floating ">
                            <a class="btn btn-outline-info w-100 h-100 d-flex justify-content-center align-items-center" href="https://www.google.com/maps/">
                                <i class="bi bi-geo-alt fa-lg"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>


            <div class="col-12 col-sm-6 form-floating mb-3">
                <input type="text"
                       class="form-control"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ms-2">
                    Room # / Suite (optional)
                </label>
            </div>



            <div class="justify-content-end d-flex pb-2">
                <div class="mx-1">
                    <button type="submit" class="btn btn-info text-white sub rounded-2 px-2 py-2">
                        Assign
                    </button>
                </div>
                <div class="mx-1">
                    <button class="btn btn-info text-white sub rounded-2 px-2 py-2">
                        View Notes
                    </button>
                </div>
                <div class="mx-1">
                    <button type="button" value="@TempData[" RequestIdViewCase"]" class="dropdown-item text-secondary canclebtn" data-toggle="modal" data-target="#exampleModal"><i class="fa-regular fa-circle-xmark me-2"></i>Cancel case</button>

                    <button type="button" class="btn btn-danger text-white sub rounded-2 px-2 py-2 bg-danger"  onclick="location.href='@Url.Action("CancleCase", "Admin" , new{confirmation = Model.ConfirmationNumber})'">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>


<script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">


@* Cancle case model *@
<div class="modal fade rounded-3 shadow" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content ">
            <div class="modal-header bg-info">
                <h5 class="modal-title text-white" id="exampleModalLabel">Confirm Confirmation</h5>
                <button class="btn" type="button" data-dismiss="modal">
                    <i class="fa-solid fa-xmark" style="color: #ffffff;"></i>
                </button>
            </div>
            <div class="modal-body">
                <h6 class="my-3 text-secondary fw-normal">Patient Name: <span class="text-info fw-normal pname"></span> </h6>
                <select class="form-select form-select-lg mb-3 fs-6" aria-label=".form-select-lg example">
                    <option class="fs-6" selected hidden>Reasons For Cancellation</option>
                    <option class="fs-6" value="1">I Am Sick</option>
                    <option class="fs-6" value="2">I need to go Urgent</option>
                    <option class="fs-6" value="3">Something Else</option>
                </select>
                <div class="my-2 form-floating">

                    <textarea class="form-control"
                              placeholder="Provide Additional Note"
                              style="height: 100px"></textarea>
                    <label for="floatingTextarea" class="text-secondary">Provide Additional Note</label>

                </div>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-info text-white">Confirm</button>
                <button type="button" class="btn btn-outline-info" data-dismiss="modal">Cancle</button>
            </div>
        </div>
    </div>
</div>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>

    $(document).ready(function () {

        $('.canclebtn').on('click', function (e) {

            var name = $(this).attr('value');
            $('.pname').html(name);

            console.log(name);
        });
    });


    $(document).ready(function () {
        $('#editButton').click(function () {
            console.log("ktktkt");
            // Remove disabled attribute to make inputs editable
            // $('#name').prop('disabled', false);
            // $('#age').prop('disabled', false);
            $('input[type="text"]').removeAttr('disabled', false);
            $('textarea').removeAttr('disabled', false);
            $('input[type="date"]').removeAttr('disabled', false);
            $('input[type="tel"]').removeAttr('disabled', false);
            // Hide the edit button after clicking it
            $(this).hide();
            $('#savebtn').removeAttr('hidden', false);
        });
    });
</script>