@using System.Globalization;
@model HalloDoc.Models.ViewModel.PatientDashboard ;
@{
    Layout = "_dashboard";
}
<Partial name="Toast" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
        <button class="nav-link active text-info" id="nav-home-tab" data-bs-toggle="tab" data-bs-target="#nav-home" type="button" role="tab" aria-controls="nav-home" aria-selected="true">Dashboard</button>
        <button class="nav-link text-info" id="nav-profile-tab" data-bs-toggle="tab" data-bs-target="#nav-profile" type="button" role="tab" aria-controls="nav-profile" aria-selected="false">Profile</button>
    </div>
</nav>
<!-- Modal -->
<div class="modal fade  mt-5 border-2" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-info">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Create New Request</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="redirect" asp-controller="Dashboard" method="post">
                <div class="modal-body d-flex justify-content-center">
                    <div class="px-2">

                        <input type="radio" class="btn-check" name="radiobtn" id="success-outlined" autocomplete="off" value="me" checked>
                        <label class="btn btn-outline-info" for="success-outlined">Me</label>
                    </div>
                    <div class="px-2">

                        <input type="radio" class="btn-check" name="radiobtn" id="danger-outlined" value="someone" autocomplete="off">
                        <label class="btn btn-outline-info" for="danger-outlined">Some One Else</label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-info" onclick="redirect()">Continue</button>
                    <button type="button" class="btn border border-1 border-info text-info" data-bs-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">
        <div class="bg-light">
            <div class="container-fluid px-xxl-5 px-md-3 px-1  pt-3" style="min-height:77vh;">
                <h5 class="ps-1">
                    <b>
                        Medical History
                    </b>
                </h5>
                <div class="container-fluid px-3 bg-white py-2">
                    <div class="d-flex justify-content-end py-2">
                        <a class="btn btn-outline-info btn-sm" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" asp-controller="PatientRequest" asp-action="Patient"><i class="bi bi-plus-lg pe-1"></i>Create New Request</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead style="background-color:lightgray">
                                <tr>
                                    <th scope="col" id="dtBasicExamples">Created Date<i class="fa-solid fa-arrow-down ps-2"></i></th>
                                    <th scope="col" id="dtBasicExamples">Current Status</th>
                                    <th scope="col">Document</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.requests)
                                {
                                    <tr class="text-black">
                                        <td>
                                            @item.CreatedDate.ToString("MMM dd , yyyy")

                                        </td>
                                        <td>

                                            @Model.findStatus(item.Status)
                                        </td>
                                        <td>
                                            <a class="btn btn-outline-info" asp-action="ViewDocument" asp-controller="Dashboard" asp-route-requestid="@item.RequestId">
                                                @item.RequestWiseFiles.Count() Document
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>


        </div>
    </div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">
