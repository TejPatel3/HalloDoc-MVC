@{
    Layout = "_NotHeader";

}
<img class="background-img d-sm-none d-block " />

<div class="container-fluid ">
<div class="d-flex justify-content-end align-items-center">
    <img src="~/images/night-mode.png"
         id="theme-toggle"
         alt="Night Mode"
         class="img-fluid  btn btn-outline-info  px-1   m-sm-3 m-1 "
         onclick="toggleTheme()" />
</div>
    <div class="row  d-flex justify-content-center " style=" min-height:85vh;">
        <div class="col-10 p-0 col-sm-7 col-md-5 col-lg-5 col-xxl-4 col-xl-5  g-5   align-items-center ">
            <div class="justify-content-center d-flex ">

                <img src="/images/hallodoc-transparent.png" class="" alt="">
            </div>
            <div class="text-info  d-none d-sm-block w-50 my-3">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none fw-bold fs-5 text-info">
                    <i class="fa-solid fa-chevron-left" style="color: #17a2b8"></i>
                    Back
                </a>
            </div>
            <div class="d-flex justify-content-center my-2">
                <h3>Reset Your Password</h3>
            </div>
            <div class="form mt-xxl-5 mt-lg-2 mt-3">

                <div class="col-12 d-flex justify-content-center mb-xxl-3">
                    <div class="col-12   form-floating mb-3  text-input-max-width">
                        <input type="text" class="form-control" placeholder="Username" aria-label="Username">
                        <label class="d-flex justify-content-between  ">
                            Username
                        </label>
                        <i class="bi bi-person-circle icon username-icon icons  mobile-icon    d-block" role="button" id="eye-icon"></i>

                    </div>
                </div>

                <div class="col-12 d-flex justify-content-center mb-xxl-3 ">
                    <button class="btn btn-info w-75 btn-lg text-white text-input-max-width w-100">Reset Your Password</button>
                </div>
                <div class="col-12 d-flex justify-content-center ">
                    <a class="btn  x btn-lg text-info   fw-semibold  text-input-max-width  mt-1 w-100"
                       asp-area="" asp-controller="Home" asp-action="Login">< Back to Login</a>
                </div>
            </div>

        </div>

    </div>
</div>