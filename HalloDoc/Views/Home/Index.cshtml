@{
    ViewData["Title"] = "Home Page";
    Layout = "_NotHeader";
}
<div class="col d-flex justify-content-end align-items-center">
    @* <i class="fa-regular fa-moon fa-2xl  btn btn-outline-info  px-2 py-3   m-3  " style="color: #0b8199;" onclick="myFunction()"></i> *@
