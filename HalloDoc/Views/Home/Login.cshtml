@model HalloDoc.DataModels.AspNetUser

@{
    Layout = "_NotHeader";
    ViewData["Title"] = "Login";

}
<Partial name="Toast" />


<img class="background-img d-block " style="" />
<div class="container-fluid p-0 m-0">

    <div class="row g-0 d-flex justify-content-center align-items-center" style=" min-height:85vh;">
        <div class="col-10 p-0 col-sm-7 col-md-5 col-lg-5 col-xxl-3 col-xl-5   align-items-center">
            <div class="justify-content-center d-flex">
                <img src="/images/hallodoc-transparent.png" alt="" />
            </div>
            <div style="min-height:65vh;">
                <form asp-action="Login" method="post">
                    <div class="text-info  d-none d-sm-block  my-3">
                        <a asp-area="" asp-controller="Home" asp-action="Index" class="text-decoration-none fw-bold fs-5 text-info">
                            <i class="fa-solid fa-chevron-left" style="color: #17a2b8"></i>
                            Back
                        </a>
                    </div>
                    <div class="d-flex justify-content-center my-2 ">
                        <h3>Login To Your Account</h3>
                    </div>
                    <div class="form mt-xxl-5 mt-lg-2 mt-3">
                        <div class="col-12 d-flex justify-content-center mb-xxl-3">
                            <div class="col-12 form-floating mb-3  ">
                                <input type="email" asp-for="Email"
                                       class="form-control "
                                       placeholder="Username"
                                       aria-label="Username" />
                                @* <span asp-validation-for="Email"></span> *@
                                <label class="d-flex justify-content-around" asp-for="Email" class="text-danger">Username </label>
                                <span asp-validation-for="Email" class="text-danger">@TempData["email"]</span>
                                <i class="bi bi-person-circle username-icon icons d-block mobile-icon" role="button" id="eye-icon"></i>
                            </div>
                        </div>

                        <div class="col-12 d-flex justify-content-center mb-xxl-3">
                            <div class="col-12 form-floating mb-3  text-input-max-width">
                                <input type="password" asp-for="PasswordHash" id="pswd"
                                       class="form-control"
                                       placeholder="Username"
                                       aria-label="Username" />
                                <label class="d-flex justify-content-between" asp-for="PasswordHash">Password </label>
                                <span asp-validation-for="PasswordHash" class="text-danger">@TempData["pswd"]</span>
                                <i class="bi bi-eye-fill username-icon icons d-block mobile-icon" role="button" id="eye-icons" onclick="hideviewpswd()"></i>
                            </div>
                        </div>
                        <div class="col-12 d-flex justify-content-center mb-xxl-3 ">
                            <button type="submit" class="btn btn-info w-100 btn-lg text-white text-input-max-width">Log in</button>
                        </div>
                        <div class="col-12 d-flex justify-content-center">
                            <a class="btn  btn-lg text-info fw-semibold text-input-max-width mt-1 w-100"
                               asp-area="" asp-controller="Home" asp-action="ForgotPassword">Forgot Password</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.0/sweetalert.min.js">
</script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

@if (TempData["errorCancelAgreementmodel"] != null)
{
    <script>
        console.log("added")
        Swal.fire({
            position: "top-end",
            icon: "error",
            title: "Something went wrong try again",
            showConfirmButton: false,
            timer: 1700
        });
    </script>
}