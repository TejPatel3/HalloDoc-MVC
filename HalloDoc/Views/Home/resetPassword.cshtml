@{
    Layout = "_NotHeader";
}
@model DataModels.DataModels.AspNetUser
<Partial name="Toast" />

<img class="background-img  d-block " />
<div class="container-fluid p-0 m-0">

    <div class="row g-0 d-flex justify-content-center align-items-center" style=" min-height:85vh;">
        <div class="col-10 p-0 col-sm-7 col-md-5 col-lg-5 col-xxl-4 col-xl-5   align-items-center">
            <div class="justify-content-center d-flex">
                <img src="/images/hallodoc-transparent.png" alt="" />
            </div>
            <div style="min-height:65vh;">
                <form onsubmit="return validate()" asp-action="resetPassword" asp-controller="Home" method="post">

                    <div class="d-flex justify-content-center my-2 ">
                        <h3>Reset Your Password</h3>
                    </div>
                    <div class="form mt-xxl-5 mt-lg-2 mt-3">

                        <div class="col-12 d-flex justify-content-center mb-xxl-3">
                            <div class="col-12 form-floating py-0 mb-3  text-input-max-width">
                                <input type="email" class="form-control py-0" asp-for="Email" readonly />
                            </div>
                        </div>      <div class="col-12 d-flex justify-content-center mb-xxl-3">
                            <div class="col-12 form-floating mb-3  text-input-max-width">
                                <input type="password" asp-for="PasswordHash"
                                       class="form-control" id="pswd"
                                       placeholder="Username"
                                       aria-label="Username" required />
                                <label class="d-flex justify-content-between" asp-for="PasswordHash">Password </label>
                                <span id="password" class="small text-danger"></span>
                                <i class="bi bi-eye-fill username-icon icons d-block mobile-icon" role="button" id="eye-icons" onclick="hideviewpswd()"></i>
                            </div>
                        </div>
                        <div class="col-12 d-flex justify-content-center mb-xxl-3">
                            <div class="col-12 form-floating mb-3  text-input-max-width">
                                <input type="password" id="pswdcnf"
                                       class="form-control" placeholder="Username"
                                       aria-label="Username" required />
                                <label class="d-flex justify-content-between">Confirm Password </label>
                                <span id="confirmPassword" class="small text-danger"></span>
                                <i class="bi bi-eye-fill username-icon icons d-block mobile-icon" role="button" id="eye-iconc" onclick="hideviewpswdcnf()"></i>
                            </div>
                        </div>
                        <div class="col-12 d-flex justify-content-center mb-xxl-3 ">
                            <button type="button" class="btn btn-info w-100 btn-lg text-white text-input-max-width" id="resetpasswordsubmit">Create Account</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

<script>
    $('#resetpasswordsubmit').click(function () {
        var check = validate()
        if (check) {
            document.getElementById("resetpasswordsubmit").type = "submit";
        }
    });

    function validate() {
        debugger;
        console.log("hello");
        var password = $('#pswd').val();
        var cnfpassword = $("#pswdcnf").val();
        console.log(password)
        console.log(cnfpassword)
        $('#password').html("");
        $("#confirmPassword").html("");
        var isValid = true;
        if (password == "") {
            $('#password').html("Enter Your Password");
            isValid = false;
        }
        if (cnfpassword == "") {
            $("#confirmPassword").html("Enter Confirm Password");
            isValid = false;
        }
        else if (cnfpassword != password) {
            $("#confirmPassword").html("Password and Confirm-Password Not Match");
            isValid = false;
        }
        return isValid;
    }
</script>


