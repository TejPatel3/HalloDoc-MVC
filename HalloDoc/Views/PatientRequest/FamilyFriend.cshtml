@model HalloDoc.Models.ViewModel.request

<div class="bg-light">

    <!-- form input -->

    <div class="container">
        <div class="d-flex justify-content-end w-100 mb-2">
            <a asp-area="" asp-controller="PatientRequest" asp-action="CreateRequest"
               class="btn m-0 btn-outline-info  px-2 ">
                <i class="fa-solid fa-chevron-left"></i>
                Back
            </a>
        </div>
        <form asp-action="FamilyFriend" method="post" enctype="multipart/form-data" id="formfamily">
            <div class="row bg-white  px-4 py-2">

                <h5 class="mb-3 mt-4 fw-semibold ">Family\Friend Information</h5>
                <div class="col-12 col-sm-6   form-floating mb-3 ">
                    <input type="text" asp-for="rFirstName" class="form-control" placeholder="Username" aria-label="Username">
                    <label class="d-flex justify-content-between  ms-2">
                        Your First name
                    </label>
                    <span asp-validation-for="rFirstName" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6   form-floating mb-3 ">
                    <input type="text" asp-for="rLastName" class="form-control" placeholder="Username" aria-label="Username">
                    <label class="d-flex justify-content-between  ms-2">
                        Your Last name
                    </label>
                    <span asp-validation-for="rLastName" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 form-floating mb-3">
                    <div asp-for="rPhonenumber" class="form-control p-0">
                        <input id="phone" asp-for="rPhoneNumber"
                               type="tel" maxlength="10"
                               name="rPhoneNumber"
                               style="border: none;  padding: 17.5px 2% 17.5px 50px; width:inherit" />

                    </div>
                        <span asp-validation-for="rPhoneNumber" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6   form-floating mb-3 ">
                    <input type="email" asp-for="rEmail" class="form-control" placeholder="Username" aria-label="Username">
                    <label class="d-flex justify-content-between  ms-2">
                        Your Email
                    </label>
                    <span asp-validation-for="rEmail" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6   form-floating mb-3 ">
                    <input type="text" class="form-control" placeholder="Username" aria-label="Username">
                    <label class="d-flex justify-content-between  ms-2">
                        Relation with Patient
                    </label>
                </div>

                <h5 class="mb-3 mt-4 fw-semibold">Patient Information</h5>
                <div class="form-floating col-12 mb-3">
                    <textarea class="form-control" asp-for="Notes"
                              placeholder="Leave a comment here"
                              style="height: 100px"></textarea>
                    <label for="floatingTextarea" class="ms-2 text-secondary">Enter Brief details about symptoms(optional)</label>
                    <span asp-validation-for="Notes" class="text-danger"></span>

                </div>
                <div class="col-12 col-sm-6 form-floating mb-3">
                    <input type="text" asp-for="FirstName"
                           class="form-control"
                           placeholder="Username"
                           aria-label="Username" />
                    <label class="d-flex justify-content-between ms-2">First Name </label>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 form-floating mb-3">
                    <input type="text" asp-for="LastName"
                           class="form-control"
                           placeholder="Username"
                           aria-label="Username" />
                    <label class="d-flex justify-content-between ms-2">Last name</label>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 form-floating mb-3">
                    @{
                        string max = DateTime.Now.ToString("yyyy-MM-dd");
                    }
                    <input type="date" asp-for="BirthDate"
                           class="form-control pt-4"
                           placeholder="Username"
                           aria-label="Username" max=@max />
                    <label class="d-flex justify-content-between  ps-4">Birth Date</label>
                    <span asp-validation-for="BirthDate" class="text-danger "></span>
                </div>
                <h5 class="mb-3 mt-4 fw-semibold">Patient contact Information</h5>
                <div class="col-12 col-sm-6 form-floating mb-3">
                    <input type="text" asp-for="Email"
                           class="form-control" id="emailpatientfamilyfriend"
                           placeholder="Username"
                           aria-label="Username" />
                    <label class="d-flex justify-content-between ms-2">Email </label>
                    <span asp-validation-for="Email" id="patientemailvalidationspan" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 form-floating mb-3">
                    <div class="form-control p-0">
                        <input id="home" asp-for="PhoneNumber"
                               type="tel" maxlength="10"
                               name="PhoneNumber"
                               style="border: none;  padding: 17.5px 2% 17.5px 50px; width:inherit" />

                    </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <h5 class="mb-3 mt-4 fw-semibold">Patient Location</h5>
                <div class="col-12 col-sm-6 form-floating mb-3">
                    <input type="text" asp-for="Street"
                           class="form-control"
                           placeholder="Username"
                           aria-label="Username" />
                    <label class="d-flex justify-content-between ms-2">Street </label>
                    <span asp-validation-for="Street" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 form-floating mb-3">
                    <input type="text" asp-for="City"
                           class="form-control"
                           placeholder="Username"
                           aria-label="Username" />
                    <label class="d-flex justify-content-between ms-2">City </label>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 form-floating mb-3">
                    <input type="text" asp-for="State"
                           class="form-control"
                           placeholder="Username"
                           aria-label="Username" />
                    <label class="d-flex justify-content-between ms-2">State </label>
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 form-floating mb-3">
                    <input type="text" asp-for="ZipCode"
                           class="form-control"
                           placeholder="Username"
                           aria-label="Username" />
                    <label class="d-flex justify-content-between ms-2">Zip code </label>
                    <span asp-validation-for="ZipCode" class="text-danger"></span>
                </div>
                <div class="col-12 col-sm-6 form-floating mb-3">
                    <input type="text"
                           class="form-control"
                           placeholder="Username"
                           aria-label="Username" />
                    <label class="d-flex justify-content-between ms-2">
                        Room # / Suite (optional)
                    </label>
                </div>

                <h5 class="mb-3 mt-4 fw-semibold">
                    (Optional) Upload Photo or Document
                </h5>
                <div class="mt-3">
                    <div class="row d-flex">
                        <div class="p-2 col-12 ">
                            <div class="form-group rounded d-flex align-items-center justify-content-between uploadbtndiv">
                                <div class="px-3">
                                    @*<label class="choosenfile text-dark small" id="file-chosen">No item selected</label>*@
                                    <input type="text" id="file-chosen" class="border border-0" placeholder="No item selected" disabled />
                                </div>
                                <div role="button" class="uploadbtn p-2 d-flex">
                                    <input type="file" id="actual-btn" asp-for="Upload" multiple hidden />
                                    <label role="button" for="actual-btn" class="d-flex align-items-center">
                                        <i class="bi bi-cloud-arrow-up p-2"></i><div>Upload</div>
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 d-flex justify-content-end pb-2 mt-2">
                    <button type="button" class="btn me-2 px-2 btn-info text-white" id="createuseraccountsubmit">Submit</button>
                    <button type="reset" class="btn px-2 btn-outline-info">Cancel</button>
                </div>
                <h6 class="text-danger small">Note: If You Request For Patient And That email is not Exist then Crete Account Link Will Sent On Patient Email,<br />&emsp;&emsp;&nbsp;&nbsp; First Crete account Then and only then this form will submit,<br />&emsp;&emsp;&nbsp;&nbsp; Do not Close This form untill Patient create Account </h6>
            </div>
        </form>
    </div>
</div>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
<!-- script -->
<script>
    // window.onload = () => {
    //     const myModal = new bootstrap.Modal("#exampleModalCenter");
    //     myModal.show();
    // };
    swal("Information",
        "When submitting a request, you must provide the correct contact information for the patient or the responsibly party.Failure to provide the correct email and phone number will delay service or be declined.",
        "warning", {
        closeOnClickOutside: false,
    });

    //Contact Number
    const phoneInputField = document.querySelector("#phone");
    const phoneInput = window.intlTelInput(phoneInputField, {
        utilsScript:
            "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/utils.js",
    });

    //DarkMode
    function myFunction() {
        var element = document.body;
        element.classList.toggle("dark-mode");
    }
    const inputHome = document.querySelector("#home");
    window.intlTelInput(inputHome, {
        initialCountry: 'gb',
        placeholderNumberType: 'FIXED_LINE',
        utilsScript: "/intl-tel-input/js/utils.js?1705750707383"
    });

    // upload button...!
    const actualBtn = document.getElementById('actual-btn');

    const fileChosen = document.getElementById('file-chosen');

    actualBtn.addEventListener('change', function () {
        fileChosen.textContent = this.files[0].name
    })
    actualBtn.addEventListener('change', function () {
        /*fileChosen.textContent = this.files[0].name*/
        fileChosen.placeholder = this.files[0].name
        fileChosen.value = this.files[0].name
    })

    var check = 1;
    $('#createuseraccountsubmit').click(function () {
        var email = $('#emailpatientfamilyfriend').val();
        var regexemail = /^\w+@@[a-zA-Z_]+?\.[a-zA-Z]{2,3}$/;
        if (email == "") {
            $('#patientemailvalidationspan').html("Please Enter Email")
        }
        else if (!regexemail.test(email)) {

            $('#patientemailvalidationspan').html("Please Enter Valid Email")
        }
        else {
            if (check == 1) {
                $.ajax({
                    url: '/PatientRequest/CheckUserExist',
                    data: { email: email },
                    async: false,
                    success: function (data) {
                        if (data) {
                            check = 2;
                            document.getElementById("createuseraccountsubmit").type = "submit";
                            $('#createuseraccountsubmit').click();
                        }
                        else {
                            $.ajax({
                                url: '/PatientRequest/CreateUserSendMail',
                                data: { email: email },
                                success: function (data) {
                                    Swal.fire({
                                        icon: "success",
                                        title: "Email Sent Successfully",
                                        text: "Crete User Account Page Link Sent on Patient Account, First Crete account and then try to submit this form"
                                    });
                                }
                            });

                        }
                    },
                });
            }
        }
    })
</script>
