@using Services.ViewModels
@model ProviderDetailsViewModel
@{
    Layout = "_OnlyLinks";
}
<Partial name="Toast" />
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<input type="number" id="physicianid-editprovideraccount"/>
<div class="container bg-light">
    <div class="d-flex justify-content-between align-items-center w-100 my-3">
        <h4 class="fw-bold">Edit Physician Account</h4>
        <a asp-controller="Provider" asp-action="Provider"
           class="btn m-0 btn-outline-info  px-2 ">
            <i class="fa-solid fa-chevron-left"></i>
            Back
        </a>
    </div>
    <div class="container-fluid my-3 bg-white shadow">
        <div class="row px-2">

            <h5 class="my-3">Account Information</h5>
            <div class="col-12 col-sm-6 form-floating mb-3 ">
                <input type="text" asp-for="username"
                       class="form-control aidisabled"
                       placeholder="Username" id="username-editprovideraccount"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">User Name</label>
                <span id="username-editprovideraccount-span" class="text-danger small"></span>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">

                <input type="text" asp-for="password"
                       class="form-control" id="password-editprovideraccount"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">Password</label>
                <span class="text-danger" id="AdminProfileResetPasswordSpan"></span>
            </div>
            <div class="col-12 col-sm-6 form-floating">

                <select class="form-select form-select-lg  fs-6 shadow-none aidisabled" aria-label=".form-select-lg example" disabled>

                    <option class="fs-6" value="1" selected>Active</option>
                    <option class="fs-6" value="0" selected>Inactive</option>

                </select>
                <label for="floatingTextarea" class="text-secondary ms-3">Status</label>

            </div>
            <div class="col-12 col-sm-6 form-floating">
                <select class="form-select form-select-lg  fs-6 shadow-none aidisabled" aria-label=".form-select-lg example" disabled>
                    @*    @foreach (var item in Model.role)
                    {
                    <option class="fs-6">@item.Name</option>
                    } *@
                </select>
                <label for="floatingTextarea" class="text-secondary ms-3">Role</label>

            </div>
            <div class="mt-3 d-flex justify-content-end col-12">
                <button class="btn btn-info me-2 text-white" id="Aieditbtn-editprovideraccount">Edit</button>
                <button class="btn btn-info me-2 text-white d-none" id="Aisavebtn-editprovideraccount">Save</button>
                <button class="btn btn-outline-info me-2">Reset Password</button>
            </div>

            @* ********************************************************************************************************************************************* *@


            <h5 class="mb-3">Physician Information</h5>
            <div class="col-12 col-sm-6 form-floating mb-3 ">
                <input type="text" asp-for="firstname"
                       class="form-control pidisabled" id="firstname-editprovideraccount"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">First Name</label>
                <span id="firstname-editprovideraccount-span" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">
                <input type="text" asp-for="lastname"
                       class="form-control pidisabled"
                       placeholder="Username" id="lastname-editprovideraccount"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">Last Name</label>
                <span id="lastname-editprovideraccount-span" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3 ">
                <input type="text" asp-for="email"
                       class="form-control pidisabled" id="email-editprovideraccount"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">Email</label>
                <span id="email-editprovideraccount-span" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">
                <div class="form-control p-0">
                    <input asp-for="phonenumber"
                           type="tel" class="pidisabled" id="phone-editprovideraccount" maxlength="10"
                           style="border: none; padding: 18px 2% 18px 50px; width:inherit" disabled />
                    <span id="phone-editprovideraccount-span" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">
                <input type="text" asp-for="medicallicencenumber"
                       class="form-control pidisabled"
                       placeholder="Username" id="medicallicense-editprovideraccount"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">Medical License</label>
                <span id="medicallicense-editprovideraccount-span" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">
                <input type="text" asp-for="npinumber"
                       class="form-control pidisabled"
                       placeholder="Username" id="npinumber-editprovideraccount"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">NPI Number</label>
                <span id="npinumber-editprovideraccount-span" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">
                <input type="text"
                       class="form-control pidisabled"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">Synchronization Email Address</label>
                <span id="" class="text-danger"></span>
            </div>
            <div class="col-12 col-sm-6 pt-2">
                @foreach (var item in Model.regionlist)
                {
                    <div class="form-check form-check-inline ">
                        <input class="form-check-input pidisabled adminselectedregion-adminprofile" type="checkbox" id="@item.RegionId"
@* 
                         @if (Model.selectedregionlist.Any(m => m.PhysicianId == Model.physicianid))
                           {
                           @:checked
                           } *@  value="@item.RegionId" disabled>
                        <label class="form-check-label" for="@item.RegionId">@item.Name</label>
                    </div>
                }
            </div>
            <div class="d-flex justify-content-end col-12">
                <button class="btn btn-info me-2 text-white" id="pieditbtn-editprovideraccount">Edit</button>
                <button class="btn btn-info me-2 text-white d-none" id="pisavebtn-editprovideraccount">Save</button>

            </div>

            @* ********************************************************************************************************************************************* *@

            <h5 class="mb-3">Mailing & Billing Information</h5>
            <div class="col-12 col-sm-6 form-floating mb-3 ">
                <input type="text" asp-for="address1" id="address1-adminprofile"
                       class="form-control mdisabled"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">Address 1</label>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">

                <input type="text" asp-for="address2" id="address2-adminprofile"
                       class="form-control mdisabled"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">Address 2</label>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">

                <input type="text" asp-for="city" id="city-adminprofile"
                       class="form-control mdisabled"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">City</label>
            </div>
            <div class="col-12 col-sm-6 form-floating">

                <select class="form-select form-select-lg  fs-6 shadow-none mdisabled" aria-label=".form-select-lg example" disabled>
                    S
                    @foreach (var item in Model.regionlist)
                    {
                        <option class="fs-6">@item.Name</option>
                    }
                </select>
                <label for="floatingTextarea" class="text-secondary ms-3">State</label>

            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">

                <input type="text" asp-for="zip" id="zip-adminprofile"
                       class="form-control mdisabled"
                       placeholder="Username"
                       aria-label="Username" disabled />
                <label class="d-flex justify-content-between ps-4">Zip</label>
            </div>
            <div class="col-12 col-sm-6 form-floating mb-3">
                <div class="form-control p-0">
                    <input id="alterphonenumber-adminprofile" asp-for="alterphonenumber"
                           type="tel" class="mdisabled" maxlength="10"
                           name="PhoneNumber"
                           style="border: none; padding: 18px 2% 15px 50px; width:inherit" disabled />

                </div>
            </div>

            <div class="d-flex justify-content-end col-12 pb-3">
                <button class="btn btn-info me-2 text-white">Edit</button>
            </div>

        </div>
    </div>


</div>
