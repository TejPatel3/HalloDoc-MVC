@{
    Layout = "_Admin";
}




<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mt-2">
        <div class="d-flex">

            <h4>Add Business</h4>

        </div>

        <div>
            <a asp-controller="Vendor" asp-action="Vendor"
               class="btn m-0 btn-outline-info  px-2 ">
                <i class="fa-solid fa-chevron-left"></i>
                Back
            </a>

        </div>
    </div>

    <div class="border-0 shadow rounded-3 px-4 py-2 mt-2 bg-white">

        <form method="post">
            <div class="mt-3 d-flex row">
                <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                    <div class="form-floating ">
                        <input type="text" class="form-control shadow-none" placeholder="Fax Number">
                        <label class="FloatingInput" for="Name">Business Name</label>
                        <span class="text-danger small"></span>

                    </div>
                </div>

                <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                    <div class="form-group">
                        <select name="profession" class="form-select fs-6 py-3 shadow-none  border-secondary">
                            <option selected hidden>Select Profession</option>
                            @*  @foreach (var item in Model.Healthprofessionaltypes)
                            {
                            <option itemid="@item.HealthProfessionalId">@item.ProfessionName</option>
                            } *@
                        </select>
                    </div>
                </div>


                <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                    <div class="form-floating ">
                        <input type="text" class="form-control shadow-none disable" placeholder="Fax Number">
                        <label class="FloatingInput" for="Name">Fax Number</label>
                        <span class="text-danger small"></span>

                    </div>
                </div>

                <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                    <div class="form-floating ">
                        <input type="email" class="form-control shadow-none" placeholder="Email">
                        <label class="FloatingInput" for="Name">Email</label>
                        <span class="text-danger small"></span>

                    </div>
                </div>

            
                <div class="p-2 col-xl-6 col-lg-6 col-md-6 col-sm-6">
                    <div class="form-floating ">
                        <input type="text" class="form-control shadow-none" placeholder="Business Contact">
                        <label class="FloatingInput" for="Name">Business Contact</label>
                        <span class="text-danger small"></span>
                    </div>
                </div>

                <div class="p-2 col-xl-12">
                    <div class="form-floating">
                        <textarea class="form-control shadow-none "
                                  placeholder="Prescription or Order Details"
                                  style="height: 100px"></textarea>
                        <label for="floatingTextarea2">Prescription or Order Details</label>
                        <span class="text-danger small"></span>

                    </div>
                </div>



                <div class="justify-content-end d-flex mt-4">

                    <div class="mx-1">
                        <button type="button" class="btn btn-info shadow-none text-white py-2 ordersubmit">
                            Submit
                        </button>
                    </div>
                    <div class="mx-1">
                        <button type="button" class="btn btn-outline-info shadow-none py-2">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </form>

    </div>
</div>

   