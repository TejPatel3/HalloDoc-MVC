@using Services.ViewModels
@model VendorViewModel
@{
    Layout = "_Admin";
}
<div class="container-fluid pb-4 px-0 px-lg-5" id="providerLocationMainDiv">
    <div class="my-3">
        <h4 class="fw-bold">Vendor</h4>
    </div>
    <div class="container-fluid shadow py-2 bg-white">
        <div class="d-flex align-items-center justify-content-between row">
            <div class="col-12 col-sm-3 col-xl-2 mb-1 mb-sm-0 ">
                <input class="form-control rounded-1 me-2 py-2 shadow-none" type="search" placeholder="Search..." aria-label="Search" style="width:clamp(100px, 100%, 100%);">
            </div>
            <div class="col-12 col-sm-3 col-xl-2 mb-1 mb-sm-0">
                <div class="dropdown d-flex" style="width:clamp(200px, 100%, 100%);">
                    <select name="regionname" class="form-select shadow-none h-100" aria-label="Floating label select example">
                        <span class="search-icon "></span>
                        <option value="1234" selected>All Profession</option>
                        @foreach (var item in Model.healthProfessionalTypelist)
                        {
                            <option class="regionselect" value="@item.HealthProfessionalId" >@item.ProfessionName</option>
                        }
                    </select>

                </div>
            </div>
            <div class="col-12 col-sm-6 col-xl-8 d-flex  justify-content-end">
                <a asp-action="AddVendorAccount" asp-controller="Vendor" class="btn btn-outline-info"><i class="fa-solid fa-plus pe-1" style="color: #0dcaf0;"></i>Add Business</a>
            </div>
        </div>
        <div class="table-responsive pt-3">
            <table class="table">
                <thead class="bg-secondary text-white">
                    <tr>
                        <td>Profession</td>
                        <td>Business Name</td>
                        <td>Email</td>
                        <td>Fax Number</td>
                        <td>Phone number</td>
                        <td>Business Contact</td>
                        <td class="d-flex justify-content-center">Actions</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.healthProfessionallist)
                    {
                        
                    <tr>
                        <td>
                                @foreach(var obj in Model.healthProfessionalTypelist)
                                {
                                    if(obj.HealthProfessionalId == item.Profession)
                                    {
                                        @obj.ProfessionName
                                    }
                                }

                        </td>
                        <td>@item.VendorName</td>
                        <td>@item.Email</td>
                        <td>@item.FaxNumber</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.BusinessContact</td>
                        <td class="d-flex justify-content-center">
                            <button class="btn btn-outline-info mx-1">Edit</button>
                            <button class="btn btn-outline-info mx-1">Delete</button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>

