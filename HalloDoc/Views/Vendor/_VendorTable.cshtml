
@model Services.ViewModels.VendorViewModel

<div class="table-responsive pt-3">
    <table class="table align-middle">
        <thead style="background-color: rgb(235, 235, 235) ; color: black !important; font-weight:700">
            <tr>
                <th>Profession</td>
                <th>Business Name</td>
                <th>Email</td>
                <th class="text-nowrap">Fax Number</td>
                <th class="text-nowrap">Phone number</td>
                <th class="text-nowrap">Business Contact</td>
                <th class="text-center">Actions</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.healthProfessionallist)
            {

                <tr>
                    <td>
                        @foreach (var obj in Model.healthProfessionalTypelist)
                        {
                            if (obj.HealthProfessionalId == item.Profession)
                            {
                                @obj.ProfessionName
                            }
                        }

                    </td>
                    <td>@item.VendorName</td>
                    <td>@item.Email</td>
                    <td>@item.FaxNumber</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.BusinessContact</td>
                    <td class="d-flex justify-content-center">
                        <a asp-action="EditVendorAccount" asp-controller="Vendor" asp-route-vendorid=@item.VendorId  class="btn btn-outline-info mx-1">Edit</a>
                        <button value="@item.VendorId" class="btn btn-outline-info mx-1 deletevendor">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
<script src="/js/Vendor/PartialViewVendor.js" asp-append-version="true"></script>
